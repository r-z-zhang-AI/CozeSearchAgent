/* 全局样式 */
page { 
  background-color: white;
  --webkit-scrollbar-width: none !important;
  scrollbar-width: none !important;
}

/* 隐藏滚动条 */
::-webkit-scrollbar {
  width: 0 !important;
  height: 0 !important;
}

.scroll-view {
  -ms-overflow-style: none !important;
  scrollbar-width: none !important;
}

.scroll-view::-webkit-scrollbar {
  display: none !important;
}

/* 确保所有页面背景都是白色 */
.container {
  background-color: white;
}


