page {
  background-color: white;
}

.my-page {
  padding: 56rpx;
  background-color: white;
  min-height: 100vh;
}

.section-title {
  font-size: 36rpx;
  font-weight: 700;
  margin-bottom: 24rpx;
  color: #333;
}

.filter-bar {
  margin-bottom: 12rpx;
}

.sort-bar {
  display: flex;
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.sort-item {
  padding: 8rpx 16rpx;
  border-radius: 999rpx;
  border: 1px solid #e6e6e6;
  color: #555;
}

.sort-item.active {
  background: #e8f5e8;
  color: #4caf50;
  border-color: #a5d6a7;
}

.search-box {
  display: flex;
  gap: 12rpx;
  align-items: center;
}

.search-input {
  flex: 1;
  height: 64rpx;
  border-radius: 999rpx;
  background: #f8fdf2;
  padding: 0 24rpx;
  border: 1px solid #e0e0e0;
}

.search-btn {
  border-radius: 999rpx;
  background: #4caf50;
  color: #fff;
}

.tag-scroll {
  white-space: nowrap;
  margin-top: 12rpx;
}

.tag {
  display: inline-block;
  padding: 8rpx 20rpx;
  margin-right: 12rpx;
  border-radius: 999rpx;
  border: 1px solid #e6e6e6;
  color: #555;
  background: #fff;
}

.tag.active {
  background: #e8f5e8;
  color: #4caf50;
  border-color: #a5d6a7;
}

.fav-card {
  background: #fff;
  border: 1px solid #e0e0e0;
  border-radius: 20rpx;
  padding: 28rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 8rpx 16rpx rgba(0, 0, 0, .03);
}

.row {
  display: flex;
  justify-content: space-between;
  align-items: baseline;
  margin-bottom: 8rpx;
}

.name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.score {
  font-size: 24rpx;
  color: #4caf50;
}

.school {
  color: #666;
  margin-bottom: 10rpx;
}

.areas {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
}

.tag-pill {
  background: #fff3cd;
  color: #856404;
  padding: 8rpx 16rpx;
  border-radius: 999rpx;
  font-size: 22rpx;
}

.empty {
  color: #999;
  margin-top: 40rpx;
  text-align: center;
}

.del-btn {
  background: #ffebee;
  color: #f44336;
  border: 1px solid #ffcdd2;
}

.contact-info {
  margin: 16rpx 0;
}

.contact-item {
  margin-bottom: 8rpx;
  font-size: 26rpx;
  display: flex;
  align-items: flex-start;
}

.contact-label {
  color: #666;
  min-width: 80rpx;
  flex-shrink: 0;
}

.contact-link {
  color: #27ae60;
  word-break: break-all;
  flex: 1;
} 