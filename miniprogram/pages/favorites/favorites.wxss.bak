/* pages/favorites/favorites.wxss */
page {
  background-color: #fafbfc;
}

.favorites-container {
  min-height: 100vh;
  padding-top: 100rpx;
}

/* 顶部导航 */
.nav-header {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  background: white;
  border-bottom: 1rpx solid #e5e5e5;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 24rpx;
  z-index: 1000;
}

.nav-back {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  color: #666;
}

.nav-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #2c3e50;
}

.nav-placeholder {
  width: 60rpx;
}

/* 加载和空状态 */
.loading-container,
.empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 48rpx;
  text-align: center;
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}

.empty-icon {
  width: 120rpx;
  height: 120rpx;
  opacity: 0.3;
  margin-bottom: 32rpx;
}

.empty-text {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.empty-desc {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 48rpx;
  line-height: 1.5;
}

.back-chat-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  border-radius: 24rpx;
  padding: 24rpx 48rpx;
  font-size: 28rpx;
}

/* 收藏列表 */
.favorites-list {
  height: calc(100vh - 100rpx);
  padding: 24rpx;
}

.prof-card {
  background: white;
  border-radius: 16rpx;
  padding: 32rpx 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
}

.prof-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.prof-name {
  font-size: 36rpx;
  font-weight: 600;
  color: #2c3e50;
  flex: 1;
}

.prof-actions {
  display: flex;
  gap: 16rpx;
}

.action-btn {
  width: 60rpx;
  height: 60rpx;
  border-radius: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f8f9fa;
}

.action-icon {
  width: 24rpx;
  height: 24rpx;
}

.remove-btn {
  background: #fee;
}

.remove-text {
  font-size: 32rpx;
  color: #e74c3c;
  line-height: 1;
}

.prof-school {
  font-size: 26rpx;
  color: #7f8c8d;
  margin-bottom: 16rpx;
}

.research-areas {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-bottom: 16rpx;
}

.area-tag {
  background: #e3f2fd;
  color: #1976d2;
  font-size: 22rpx;
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
}

.match-score {
  margin-bottom: 16rpx;
}

.score-text {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  font-size: 22rpx;
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
}

.contact-info {
  margin-bottom: 16rpx;
}

.contact-item {
  display: flex;
  margin-bottom: 8rpx;
  font-size: 24rpx;
}

.contact-label {
  color: #7f8c8d;
  width: 120rpx;
  flex-shrink: 0;
}

.contact-value {
  color: #2c3e50;
  flex: 1;
}

.homepage-link {
  color: #3498db;
  text-decoration: underline;
}

.highlights {
  border-top: 1rpx solid #ecf0f1;
  padding-top: 16rpx;
}

.highlights-title {
  font-size: 24rpx;
  color: #7f8c8d;
  margin-bottom: 8rpx;
}

.highlight-item {
  font-size: 24rpx;
  color: #34495e;
  line-height: 1.5;
  margin-bottom: 4rpx;
}
