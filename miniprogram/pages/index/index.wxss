page {
  background-color: var(--bg-secondary);
}

.title {
  color: var(--primary-color);
  font-size: 92rpx;
  font-weight: var(--font-semibold);
  text-align: center;
  padding: 100rpx 0 60rpx 0;
}

.sub-title {
  color: var(--text-secondary);
  font-size: var(--font-lg);
  font-weight: var(--font-normal);
  text-align: center;
  line-height: 1.4;
}

.btn-box {
  display: flex;
  justify-content: center;
  gap: var(--space-md);
  padding: 60rpx 0;
}

.btn-fill {
  width: 180rpx;
  height: 80rpx;
  border-radius: var(--radius-sm);
  line-height: 80rpx;
  color: var(--bg-primary);
  background-color: var(--primary-color);
  text-align: center;
  box-shadow: var(--shadow-md);
  font-weight: var(--font-medium);
}

.btn-light {
  width: 180rpx;
  height: 80rpx;
  border-radius: var(--radius-sm);
  line-height: 80rpx;
  color: var(--primary-color);
  background-color: var(--bg-primary);
  border: 1rpx solid var(--primary-color);
  text-align: center;
  font-weight: var(--font-medium);
}

.introduction-box {
  margin: 0px auto;
  border: rgb(238, 238, 238) solid 1px;
  width: 500rpx;
  padding: 30px;
  margin-bottom: 25px;
}

.introduction-title {
  text-align: center;
  font-size: 18px; /* 从16px增加到18px */
  font-weight: 500;
  padding-bottom: 20px;
}

.introduction-desc {
  font-size: 16px; /* 从14px增加到16px */
  color: rgb(153, 153, 153);
  line-height: 26px; /* 相应调整行高 */
  text-align: justify;
}

.title-h1 {
  font-size: 18px; /* 从16px增加到18px */
  font-weight: 500;
  padding-left: 16px;
  margin: 40px 0px 0px 0px
}

.title-h4 {
  font-size: 14px; /* 从12px增加到14px */
  font-weight: 300;
  padding-left: 16px;
  margin-top: 4px;
  opacity: 0.7;
}

.function-box {
  margin: 16px;
  border: #eee solid 1px;
  border-radius: 8px;
  padding: 16px;
}

.function-box-title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 20px; /* 从18px增加到20px */
  font-weight: 500;
}

.step-title {
  line-height: 37px;
  font-size: 18px; /* 从16px增加到18px */
}
.step-text{
  font-size: 16px; /* 从14px增加到16px */
  line-height: 26px; /* 相应调整行高 */
  padding: 10px 0px;
  text-align: justify;
}
.model{
  font-size: 18px; /* 从16px增加到18px */
  line-height: 40px;
}
.step-left {
  color: #FFF;
  background-color: #1aad19;
  border: #1aad19 solid 1px;
  padding: 0px 6px;
}

.step-right {
  color: #1aad19;
  background-color: #FFF;
  border: #1aad19 solid 1px;
  padding: 0px 6px;
  margin-right: 10px;
}

.code_zone {
  background-color: #0E190E;
  color: rgba(255, 255, 255, 0.7);
  border-radius: 12rpx;
  padding: 16rpx 32rpx;
  box-shadow: 0 6px 8px rgba(0, 0, 0, 0.15);
  position: relative;
  margin-bottom: 24rpx;
}

.btn-full {
  height: 40px;
  border-radius: 4px;
  line-height: 40px;
  color: #fff;
  background-color: #1aad19;
  text-align: center;
}