<view class="food-list-container">
  <view class="food-grid">
    <view wx:for="{{foodList}}" wx:key="id" 
          class="food-card" 
          bindtap="onFoodItemTap" 
          data-id="{{item.id}}">
      
      <view class="food-image-container">
        <image class="food-image" src="{{item.image}}" mode="aspectFill" />
        <view class="food-overlay">
          <text class="view-detail">查看详情</text>
        </view>
      </view>
      
      <view class="food-info">
        <text class="food-name">{{item.name}}</text>
        <view class="food-meta">
          <text class="food-price">¥{{item.price}}</text>
          <view class="food-rating" wx:if="{{item.rating}}">
            <text class="rating-star">⭐</text>
            <text class="rating-score">{{item.rating}}</text>
          </view>
        </view>
        <text class="food-desc" wx:if="{{item.description}}">{{item.description}}</text>
      </view>
    </view>
  </view>
</view>
