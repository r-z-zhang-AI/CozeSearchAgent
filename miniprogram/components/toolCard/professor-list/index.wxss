/* 教授列表容器 */
.professor-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  padding: 16rpx;
  width: 100%;
  box-sizing: border-box;
}

/* 教授卡片 - 清新简洁风格 */
.prof-card {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx 20rpx;
  position: relative;
  box-shadow: 0 1rpx 8rpx rgba(0, 0, 0, 0.04);
  border: 1px solid #f5f5f5;
  transition: all 0.2s ease;
}

.prof-card:active {
  transform: translateY(1rpx);
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
}

.prof-card.low-match {
  background: #fafbfc;
  opacity: 0.8;
  border-color: #e8e8e8;
}

/* 右上角操作按钮 - 更轻盈的设计 */
.corner-actions {
  position: absolute;
  top: 16rpx;
  right: 16rpx;
  display: flex;
  gap: 8rpx;
}

.action-btn {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 12rpx;
  border: none;
  padding: 0;
  margin: 0;
  box-shadow: 0 1rpx 4rpx rgba(0, 0, 0, 0.06);
  transition: all 0.2s ease;
}

.action-btn:active {
  transform: scale(0.96);
  box-shadow: 0 1rpx 6rpx rgba(0, 0, 0, 0.08);
}

.action-icon {
  width: 24rpx;
  height: 24rpx;
}

.star-btn.favorited .action-icon {
  filter: sepia(1) saturate(5) hue-rotate(35deg) brightness(1.2);
}

.share-btn .action-icon {
  opacity: 0.7;
}

/* 教授头部信息 - 更清爽的间距 */
.prof-header {
  padding-right: 110rpx;
  margin-bottom: 14rpx;
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.prof-header.read-only {
  padding-right: 0;
}

.prof-name {
  font-size: 36rpx; /* 从32rpx增加到36rpx */
  font-weight: 600;
  color: #2c3e50;
  line-height: 1.3;
}

.match-score {
  align-self: flex-start;
}

.score-text {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  font-size: 24rpx; /* 从20rpx增加到24rpx */
  font-weight: 500;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  letter-spacing: 0.3rpx;
}

/* 学院信息 - 更柔和的颜色 */
.prof-school {
  color: #7f8c8d;
  font-size: 30rpx; /* 从26rpx增加到30rpx */
  margin-bottom: 16rpx;
  font-weight: 400;
}

/* 研究领域标签 - 清新的配色方案 */
.research-areas {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
  margin-bottom: 20rpx;
}

.area-tag {
  background: linear-gradient(135deg, #a8edea 0%, #fed6e3 100%);
  color: #2c3e50;
  font-size: 26rpx; /* 从22rpx增加到26rpx */
  font-weight: 400;
  padding: 6rpx 12rpx;
  border-radius: 14rpx;
  border: none;
  white-space: nowrap;
  opacity: 0.9;
}

/* 亮点信息 - 更清爽的间距 */
.highlights {
  margin-bottom: 20rpx;
}

.highlight-item {
  font-size: 28rpx; /* 从24rpx增加到28rpx */
  color: #5a6c7d;
  line-height: 1.5;
  margin-bottom: 6rpx;
  padding-left: 8rpx;
  position: relative;
}

.highlight-item::before {
  content: "•";
  color: #bdc3c7;
  position: absolute;
  left: -4rpx;
}

/* 联系信息 - 更简洁的设计 */
.contact-info {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  padding-top: 12rpx;
  border-top: 1px solid #f1f2f6;
}

.contact-item {
  display: flex;
  align-items: flex-start;
  flex-wrap: wrap;
}

.contact-label {
  color: #95a5a6;
  font-size: 28rpx; /* 从24rpx增加到28rpx */
  min-width: 76rpx;
  flex-shrink: 0;
  font-weight: 400;
}

.contact-value {
  color: #3498db;
  font-size: 28rpx; /* 从24rpx增加到28rpx */
  flex: 1;
  word-break: break-all;
  margin-left: 6rpx;
  font-weight: 400;
}

.contact-link {
  text-decoration: none;
  cursor: pointer;
  transition: color 0.2s ease;
  border-bottom: 1px dotted #3498db;
}

.contact-link:active {
  color: #2980b9;
  opacity: 0.8;
}

/* 主页列表样式 - 更简洁清爽 */
.homepage-list {
  display: flex;
  flex-direction: column;
  gap: 6rpx;
  margin-left: 6rpx;
  flex: 1;
}

.homepage-item {
  color: #3498db;
  font-size: 28rpx; /* 从24rpx增加到28rpx */
  border-bottom: 1px dotted #3498db;
  word-break: break-all;
  line-height: 1.4;
  font-weight: 400;
}

/* 空状态 - 更柔和的提示 */
.empty-state {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 60rpx 20rpx;
}

.empty-text {
  color: #bdc3c7;
  font-size: 30rpx; /* 从26rpx增加到30rpx */
  font-weight: 300;
} 