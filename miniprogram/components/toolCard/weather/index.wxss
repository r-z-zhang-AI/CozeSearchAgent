/* 天气卡片容器 */
.weather-container {
  background: linear-gradient(135deg, #74b9ff 0%, #0984e3 100%);
  border-radius: 24rpx;
  padding: 32rpx 24rpx;
  color: white;
  box-shadow: 0 8rpx 32rpx rgba(116, 185, 255, 0.3);
  overflow: hidden;
  position: relative;
}

.weather-container.night {
  background: linear-gradient(135deg, #6c5ce7 0%, #341f97 100%);
  box-shadow: 0 8rpx 32rpx rgba(108, 92, 231, 0.3);
}

/* 装饰性背景 */
.weather-container::before {
  content: '';
  position: absolute;
  top: -50%;
  right: -20%;
  width: 200rpx;
  height: 200rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 50%;
  z-index: 0;
}

.weather-container::after {
  content: '';
  position: absolute;
  bottom: -30%;
  left: -10%;
  width: 150rpx;
  height: 150rpx;
  background: rgba(255, 255, 255, 0.05);
  border-radius: 50%;
  z-index: 0;
}

/* 主要天气信息 */
.weather-main {
  position: relative;
  z-index: 1;
  margin-bottom: 24rpx;
}

.weather-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
}

.current-weather {
  display: flex;
  align-items: center;
  gap: 16rpx;
  flex: 1;
}

.weather-icon-main {
  width: 80rpx;
  height: 80rpx;
  filter: drop-shadow(0 4rpx 8rpx rgba(0, 0, 0, 0.2));
}

.weather-info {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.weather-desc {
  font-size: 28rpx;
  font-weight: 500;
  opacity: 0.9;
}

.current-temp {
  font-size: 48rpx;
  font-weight: 600;
  line-height: 1.1;
}

.location-info {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  gap: 8rpx;
}

.city-name {
  font-size: 24rpx;
  opacity: 0.8;
}

.temp-range {
  font-size: 26rpx;
  font-weight: 500;
  background: rgba(255, 255, 255, 0.2);
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
}

/* 天气预报部分 */
.weather-forecast {
  position: relative;
  z-index: 1;
}

.forecast-title {
  font-size: 24rpx;
  opacity: 0.8;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.forecast-list {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.forecast-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: rgba(255, 255, 255, 0.1);
  padding: 12rpx 16rpx;
  border-radius: 16rpx;
  backdrop-filter: blur(10rpx);
}

.forecast-date {
  font-size: 24rpx;
  font-weight: 500;
  min-width: 80rpx;
}

.forecast-weather {
  display: flex;
  align-items: center;
  gap: 8rpx;
  flex: 1;
  justify-content: center;
}

.weather-icon-small {
  width: 32rpx;
  height: 32rpx;
}

.forecast-desc {
  font-size: 22rpx;
  opacity: 0.9;
}

.forecast-temp {
  font-size: 22rpx;
  font-weight: 500;
  min-width: 100rpx;
  text-align: right;
}
}

.city-text {
  font-size: 38rpx;
  font-weight: 500;
  color: #f0f9ff;
}

.high-low-text {
  color: #f0f9ff;
  font-size: 14px;
}

.hourly-container {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.hourly-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.hour-text {
  color: #dbeafe;
  font-size: 24rpx;
}

.hour-circle {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
}

.hour-day-circle {
  background-color: #facc15;
}

.hour-night-circle {
  background-color: #e0e7ff;
}

.hour-temp {
  color: #f0f9ff;
  font-size: 28rpx;
}
